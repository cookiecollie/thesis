{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "json-format",
        "prettier"
    ],
    "rules": {
        "quotes": ["warn", "double"],
        "semi": ["warn", "never"],
        "react/self-closing-comp": [
            "warn",
            {
                "component": true,
                "html": true
            }
        ],
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/no-explicit-any": "off",
        "no-unused-vars": "off",
        "react/no-unknown-property": "off",
        "prettier/prettier": [
            "warn",
            {
                "tabWidth": 4,
                "endOfLine": "auto"
            }
        ]
    }
}
